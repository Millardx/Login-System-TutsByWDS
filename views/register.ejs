<h1>Register</h1> <!-- Main heading for the registration page -->

<!-- Form for user registration -->
<form action="/register" method="POST">
    <div>
        <label for="name">Name</label> <!-- Label for name input -->
        <input type="text" id="name" name="name" required> <!-- Name input field -->
    </div>
    <div>
        <label for="email">Email</label> <!-- Label for email input -->
        <input type="email" id="email" name="email" required> <!-- Email input field -->
    </div>
    <div>
        <label for="password">Password</label> <!-- Label for password input -->
        <input type="password" id="password" name="password" required> <!-- Password input field -->
    </div>
    <button type="submit">Register</button> <!-- Submit button for the form -->
</form>

<!-- Link to the login page -->
<a href="/login">Login</a>
