<h1>Login</h1> <!-- Main heading for the login page -->

<!-- Display error messages if there are any -->
<% if (messages.error) { %>
    <%= messages.error %> <!-- Render error message -->
<% } %>

<!-- Form for user login -->
<form action="/login" method="POST">
    <div>
        <label for="email">Email</label> <!-- Label for email input -->
        <input type="email" id="email" name="email" required> <!-- Email input field -->
    </div>
    <div>
        <label for="password">Password</label> <!-- Label for password input -->
        <input type="password" id="password" name="password" required> <!-- Password input field -->
    </div>
    <button type="submit">Login</button> <!-- Submit button for the form -->
</form>

<!-- Link to the registration page -->
<a href="/register">Register</a>
